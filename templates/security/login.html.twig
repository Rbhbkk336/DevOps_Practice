{% extends 'base.html.twig' %}

{% block title %}Вход{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/login.css') }}">
{% endblock %}

{% block body %}
    <div class="main">
        <div class="main__container">

            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Вы уже вошли как {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Выйти</a>
                </div>
            {% endif %}

            <h1 style="text-align:center; margin-bottom: 20px;">Вход</h1>

            <form method="post" class="login-form">
                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>

                <div class="form-group">
                    <label for="inputPassword">Пароль</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="form-group remember-me">
                    <label>
                        <input type="checkbox" name="_remember_me"> Запомнить меня
                    </label>
                </div>

                <button class="btn-submit" type="submit">
                    Войти
                </button>
            </form>

            <div class="login__footer">
                Нет аккаунта? <a href="{{ path('app_register') }}">Зарегистрироваться</a>
            </div>
        </div>
    </div>
{% endblock %}
